<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TextoAsteroides"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/degradado"
    android:orientation="vertical"
    android:padding="30dip" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title"
        android:textSize="@dimen/activity_horizontal_margin" />

    <Button
        style="@style/TextoAsteroides.Botones"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/activity_vertical_margin_tablet"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_tablet"
        android:layout_marginRight="@dimen/activity_horizontal_margin_tablet"
        android:layout_marginTop="@dimen/activity_vertical_margin_tablet"
        android:onClick="lanzarJuego"
        android:text="@string/play" />

    <Button
        style="@style/TextoAsteroides.Botones"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_tablet"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_tablet"
        android:layout_marginRight="@dimen/activity_horizontal_margin_tablet"
        android:layout_marginTop="@dimen/activity_vertical_margin_tablet"
        android:onClick="lanzarPreferencias"
        android:text="@string/configure" />

    <Button
        style="@style/TextoAsteroides.Botones"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_tablet"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_tablet"
        android:layout_marginRight="@dimen/activity_horizontal_margin_tablet"
        android:layout_marginTop="@dimen/activity_vertical_margin_tablet"
        android:onClick="lanzarAcercaDe"
        android:text="@string/about" />

    <Button
        style="@style/TextoAsteroides.Botones"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_tablet"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_tablet"
        android:layout_marginRight="@dimen/activity_horizontal_margin_tablet"
        android:layout_marginTop="@dimen/activity_vertical_margin_tablet"
        android:onClick="lanzarPuntuaciones"
        android:text="@string/exit" />

</LinearLayout>